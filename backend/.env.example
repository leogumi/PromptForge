# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_NAME=promptforge
DB_PASSWORD=your_database_password
DB_PORT=5432

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Stripe Configuration (International)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (create these in your Stripe dashboard)
STRIPE_PRICE_BASIC=price_basic_plan_id
STRIPE_PRICE_PREMIUM=price_premium_plan_id
STRIPE_PRICE_ENTERPRISE=price_enterprise_plan_id

# MercadoPago Configuration (Argentina/LATAM) - USE THIS IF YOU'RE IN ARGENTINA
MERCADOPAGO_ACCESS_TOKEN=APP_USR-your-mercadopago-access-token
MERCADOPAGO_PUBLIC_KEY=APP_USR-your-mercadopago-public-key

# AI API Keys (choose one or both)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Email Configuration (optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Other
MAX_FILE_SIZE=5242880
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
